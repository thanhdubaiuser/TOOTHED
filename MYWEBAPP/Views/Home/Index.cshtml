@model MYWEBAPP.Models.HomeViewModel

<main id="homepage">
    <div class="featured-card-container">
        <div class="card featured-card" tabindex="0" onclick="window.location.href='/Live/IndexLive'">
            <div class="card-img-wrapper">
                <img class="card-img-top" src="@Model.FeaturedStream.ThumbnailUrl" alt="Hình thu nhỏ trực tiếp nổi bật" loading="lazy">
                <span class="featured-badge">TRỰC TIẾP NỔI BẬT</span>
            </div>
            <div class="card-body featured-info">
                <h2 class="card-title">@Model.FeaturedStream.Title</h2>
                <p class="card-text">@Model.FeaturedStream.Description</p>
            </div>
        </div>
    </div>

    <section class="streams-grid" aria-label="Các livestream">
        @foreach (var stream in Model.Streams)
        {
            <div class="stream-card" tabindex="0" role="button" aria-pressed="false" onclick="window.location.href='/Live/IndexLive'">
                <div class="stream-thumb" style="background-image: url('@stream.ThumbnailUrl');"></div>
                <div class="stream-info">
                    <div class="stream-title" title="@stream.Title">@stream.Title</div>
                    <div class="streamer-name">@stream.StreamerName</div>
                    <div class="viewers" aria-label="@stream.Viewers người xem">@stream.Viewers người xem</div>
                </div>
            </div>
        }
    </section>

    <!-- Phần categories giữ nguyên -->
    <section class="categories" aria-label="Duyệt theo thể loại">
        <h3>Duyệt theo thể loại</h3>
        <div class="category-list" role="list">
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=game-hanh-dong'">Game Hành động</div>
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=am-nhac'">Âm nhạc</div>
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=nau-an'">Nấu ăn</div>
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=tro-chuyen'">Trò chuyện</div>
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=the-thao'">Thể thao</div>
            <div class="category" role="listitem" tabindex="0" onclick="window.location.href='/Live/Categories?category=giao-duc'">Giáo dục</div>
        </div>
    </section>
</main>