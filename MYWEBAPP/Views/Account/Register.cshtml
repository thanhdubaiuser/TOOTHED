@model MYWEBAPP.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng Ký";
}

<main id="register-page" aria-label="Trang đăng ký">
    <h2>Đăng ký tài khoản LimoTV</h2>
    <form id="register-form" aria-describedby="register-desc" asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <label asp-for="Username">Tên đăng nhập</label>
        <input asp-for="Username" autocomplete="username" required aria-required="true" placeholder="Nhập tên đăng nhập" />
        <span asp-validation-for="Username" class="text-danger"></span>
        
        <label asp-for="Email">Email</label>
        <input asp-for="Email" autocomplete="email" required aria-required="true" placeholder="Nhập email" />
        <span asp-validation-for="Email" class="text-danger"></span>
        
        <label asp-for="Password">Mật khẩu</label>
        <input asp-for="Password" autocomplete="new-password" required aria-required="true" placeholder="Nhập mật khẩu" />
        <span asp-validation-for="Password" class="text-danger"></span>
        
        <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" autocomplete="new-password" required aria-required="true" placeholder="Nhập lại mật khẩu" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        
        <button type="submit">Đăng ký</button>
    </form>
    <div class="auth-links">
            <p>Đã có tài khoản? <a href="/Account/Login">Đăng nhập</a></p>
            <a href="/" id="back-home">Quay lại trang chủ</a>
        </div>
    </div>
</main>

<script>
    const backHomeBtn = document.getElementById('back-home');

    backHomeBtn.addEventListener('click', () => {
        window.location.href = '/';
    });

    backHomeBtn.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            backHomeBtn.click();
        }
    });
</script>